<%= form_for grid do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter grid name" %>
  </div>
  <div class="form-group">
    <%= f.label :height %>
    <%= f.number_field :height, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :width %>
    <%= f.number_field :width, class: 'form-control' %>
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>